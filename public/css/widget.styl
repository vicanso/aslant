@import './common'
@import './pure-grid.css'

.table
  width 100%
  border-collapse collapse
  border-spacing 0
  thead
    border-top 1px solid $COLOR_GRAY
    border-bottom 1px solid $COLOR_GRAY
    background-color #f1f9fd
  th, td
    padding 10px 15px
    border none
    text-align center
  tbody tr
    &:nth-child(even)
      background-color #fff
    &:nth-child(odd)
      background-color #f4f8fb

