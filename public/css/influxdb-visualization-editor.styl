@import 'nib'
@import './constant'
.influxdbVisualizationEditor
  $showServerSelectorWidth = 50px
  $timeSelectorWidth = 150px
  position absolute
  top $HEADER_HEIGHT
  left $NAV_WIDTH
  bottom 0
  right 0
  padding 0 10px 10px
  .showServerSelector
    background-color #f0f0f0
    border 1px solid $GRAY_BORDER_COLOR
    border-radius 3px
  .showServerSelector
    line-height 20px
    width $showServerSelectorWidth
  .timeSelectorContainer
    width $timeSelectorWidth
  .queryBarContainer
    margin 10px 0
    position relative
    .influxQl
      margin-left $showServerSelectorWidth + 10
      margin-right $timeSelectorWidth + 10
    .datePickerSelector
      position absolute
      width 455px
      top -10px
      right 0
      border 1px solid $GRAY_BORDER_COLOR
      background-color $BG_COLOR
      border-radius 3px
      padding-top 10px
      .apply
        margin 0 10px 10px
  .basicSelector
    position absolute
    border 1px solid $GRAY_BORDER_COLOR
    border-radius 3px
    padding 0 10px
    z-index 2
    width 150px
    background-color $BG_COLOR
    .influxdbSelector
      margin-bottom 10px
  .filterSelector, .extractSelector, .groupBySelector, .extraSelector, .echartSetting
    margin-right 10px
    border 1px solid $GRAY_BORDER_COLOR
    padding 10px
    border-radius 3px
  .filterSelector
    .influxdbSelector
      margin-bottom 10px
  .datePickerSelector
    margin-right 0
    .dateTimePicker
      margin auto
  .groupByContainer
    position relative
    .groupBySelector
      position absolute
      z-index 1
      right -3px
      top 20px
      width 200px
      background-color $BG_COLOR
      padding-bottom 0
      margin-right 0
      .parallelSelector
        width 100%
  .extraSelector
    margin-right 0
    line-height 24px
    .fieldShowSelector
      list-style none
      margin 0
      padding 0
      li
        margin-right 10px
        display inline-block
    .submit
      display block
  .item
    border-bottom 1px solid $GRAY_BORDER_COLOR
    padding-bottom 5px
    margin-top 5px
  .echartSetting
    .yAxisSetting
      line-height 30px
      .pure-g
        margin-left 50px
        .pure-u-1-2
          padding-right 10px
          &:last-child
            padding-right 0
          input
            width 100%
  .visualizationSaveDialog .dialog
    margin-top -130px
    fieldset
      padding 0
    input, textarea
      width 200px
    .submit
      width 200px